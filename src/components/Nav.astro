---
const driveLink =
  "https://drive.google.com/file/d/1pQnpcA-rQOT-B4WqOgQ4FlVzsfK4AVcn/view?usp=sharing";
---

<header
  class="fixed z-10 top-0 flex items-center justify-center w-full mx-auto mt-2"
>
  <nav
    class="text-white flex px-3 py-0 text-sm md:text-base transition-all justify-center rounded-full"
  >
    <a
      class="nav-link block relative px-1 md:px-3 py-1 transition hover:text-violet-300 hover:scale-105 focus:text-violet-300"
      href="#experiencia">Experiencia</a
    >
    <a
      class="nav-link block relative px-1 md:px-3 py-1 transition hover:text-violet-300 hover:scale-105 focus:text-violet-300"
      href="#proyectos">Proyectos</a
    >
    <a
      class="nav-link block relative px-1 md:px-3 py-1 transition hover:text-violet-300 hover:scale-105 focus:text-violet-300"
      href="#sobreMi">Sobre MÃ­</a
    >
    <a
      class="block relative px-1 md:px-3 py-1 transition hover:text-violet-300 hover:scale-105"
      href={driveLink}
      target="_blank">CV</a
    >
  </nav>
</header>

<script>
  document.addEventListener("scroll", () => {
    const nav = document.querySelector("nav");
    if (nav) {
      if (window.scrollY > 60) {
        nav.classList.add("bg-violet-900");
      } else {
        nav.classList.remove("bg-violet-900");
      }
    }
  });

  document.querySelectorAll(".nav-link").forEach((link) => {
    link.addEventListener("click", (e) => {
      e.preventDefault();
      const href = link.getAttribute("href");
      if (!href) return;
      const section = document.querySelector(href);
      if (section) {
        section.scrollIntoView({ behavior: "smooth" });
      }
    });
  });
</script>
