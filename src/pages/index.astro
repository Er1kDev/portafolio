---
import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav.astro";
import Presentacion from "../components/Presentacion.astro";
import Proyectos from "../components/Proyectos.astro";
import Experiencia from "../components/Experiencia.astro";
import SobreMi from "../components/SobreMi.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Er1kDev - Portafolio">
	<div
		class="inset-0 -z-10 h-full w-full items-center [background:radial-gradient(125%_125%_at_50%_10%,#000_40%,#63e_100%)]"
	>
		<Nav />
		<main class="px-4">
			<Presentacion client:load />
			<div class="space-y-24">
				<Experiencia />
				<Proyectos />
				<SobreMi />
				<Footer />
			</div>
		</main>
	</div>
</Layout>
